10    ' *** SCHRIFTPROBEN ***
20    FULLW 2:CLEARW 2
30    FOR A=0 TO 15
40    SCHRIFTTYP=A
50    GOSUB SCHRIFTART
60    GOTOXY 2,A+2:?A,"SCHRIFTPROBE"
70    NEXT A
80    FOR A=16 TO 31
90    SCHRIFTTYP=A
100   GOSUB SCHRIFTART
110   GOTOXY 20,A-14:?A,"SCHRIFTPROBE"
120   NEXT A
130   WARTE=INP(2)
140   SCHRIFTTYP=0
150   GOSUB SCHRIFTART
160   END
65000 SCHRIFTART:
65002 ' --> SCHRIFTTYP
65004 '     0=NORMAL      1=FETT      2=HELL
65006 '     4=KURSIV      8=UNTERSTR.16=HOHL
65008 '     oder Kombinationen
65010 '
65012 POKE CONTRL,106
65014 POKE CONTRL+2,0
65016 POKE CONTRL+6,1
65018 POKE INTIN,SCHRIFTTYP
65020 VDISYS
65022 RETURN
